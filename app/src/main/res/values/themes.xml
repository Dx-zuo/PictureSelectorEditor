<resources>
    <!-- Base application theme. -->
    <style name="Theme.XCrop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/theme</item>
        <item name="colorOnPrimary">@color/theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme</item>
        <item name="colorSecondaryVariant">@color/theme</item>
        <item name="colorOnSecondary">@color/theme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.XCrop.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.XCrop.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.XCrop.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>